{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": false,
        "incremental": true,
        "outDir": "./dist",
        "rootDir": ".",
        "types": [
            "node"
        ],
    },
    "files":[
        "./build.ts"
    ],
    "exclude": [
        "node_modules/**",
    ],
}